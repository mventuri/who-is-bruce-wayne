<body>
<h1>Is Bruce Wayne The Dark Knight?</h1>
<img id="theTruth" src="bruce.jpg" width="400" height="250"></br>
<button type="button" onclick="ChangeImage()">Find it out!</button>



<script>
function ChangeImage(){
var image = document.getElementById("theTruth")
	if (image.src.match("bruce.jpg")) {
        image.src = "batman.jpg";
		
		}
	else {
	image.src = "bruce.jpg";
	}
}
</script>
